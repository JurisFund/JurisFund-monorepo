generator client {
  provider = "prisma-client-js"
  output = "../client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  userId            String @db.ObjectId
  user              User @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  @@unique([provider, providerAccountId])
}

model User {
  id               String             @id @default(auto()) @map("_id") @db.ObjectId
  name             String?
  address          String?            @unique
  email            String?            
  emailVerified    DateTime?
  image            String?
  createdAt        DateTime           @default(now())
  accounts         Account[]
}


model BorrowersTable {
  id               String             @id @default(auto()) @map("_id") @db.ObjectId
  userId           String             @db.ObjectId 
  firstName        String
  lastName         String           
  email            String             @unique
  phoneNumber      String           @unique
  stateLiveIn      String
  typeOfCase       String
  alreadyWorkingWithAttorney String 
  lawFirmName      String
  lawyerName       String
  lawyerEmail      String?
  lawyerWalletAddress String?
  expectedSettlementAmount String
  applicationFillingDate DateTime     @default(now())
  caseNumber       String 
  applicationStatus String            @default("Pending") // Pending, Approved, Rejected
  loanAmount       String?
  walletAddress    String 
  fixedAPY         String?
  loanInssuanseDate DateTime?
  accruedInterest String?
  payoffDate       DateTime?

}